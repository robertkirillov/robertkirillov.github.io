<body>
  <div class="wrap">
    <h1>Hitster — QR kaardid</h1>
    <p class="hint">
      See leht loeb <b>songs.json</b> ja genereerib automaatselt QR-kaardid.
      QR sisu on ainult laulu ID (nt <b>est-001</b>).
      Mängimiseks: avage <b>hitster.html</b> → vajutage “Skänneri” → skännige kaart.
      Printimiseks: <b>Print</b> → Save as PDF.
    </p>

    <div class="controls">
      <div>
        <label>QR suurus (px)</label>
        <input id="size" type="number" value="200" min="120" max="320" />
      </div>
      <div>
        <label>Filtreeri (ID sisaldab)</label>
        <input id="filter" type="text" placeholder="nt est-0" />
      </div>
      <div style="display:flex; align-items:flex-end; gap:10px; flex-wrap:wrap;">
        <button id="regen">Genereeri uuesti</button>
        <button onclick="window.print()">Print / PDF</button>
      </div>
    </div>

    <div id="status" class="hint"></div>
    <div class="grid" id="grid"></div>
  </div>

  <!-- QR code generator -->
  <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>

  <script>
    const grid = document.getElementById("grid");
    const statusEl = document.getElementById("status");
    const sizeEl = document.getElementById("size");
    const filterEl = document.getElementById("filter");
    const regenBtn = document.getElementById("regen");

    function setStatus(msg){ statusEl.textContent = msg; }

    async function loadSongs(){
      const res = await fetch("songs.json", { cache: "no-store" });
      if (!res.ok) throw new Error("songs.json not found");
      const data = await res.json();
      if (!Array.isArray(data)) throw new Error("songs.json must be an array");
      return data;
    }

    function makeCard(songId, size){
      const card = document.createElement("div");
      card.className = "card";

      const qrWrap = document.createElement("div");
      qrWrap.className = "qr";

      const canvas = document.createElement("canvas");
      qrWrap.appendChild(canvas);

      const id = document.createElement("div");
      id.className = "id";
      id.textContent = songId;

      card.appendChild(qrWrap);
      card.appendChild(id);

      QRCode.toCanvas(canvas, songId, {
        width: size,
        margin: 1,
        errorCorrectionLevel: "M"
      });

      return card;
    }

    async function render(){
      grid.innerHTML = "";
      setStatus("Laen songs.json…");

      let songs;
      try { songs = await loadSongs(); }
      catch (e){
        console.error(e);
        setStatus("Viga: songs.json ei lae. Kontrolli, et fail on repo root’is ja JSON on korrektne.");
        return;
      }

      const size = Math.max(120, Math.min(320, Number(sizeEl.value) || 200));
      const filter = (filterEl.value || "").trim().toLowerCase();

      const ids = songs
        .map(s => s && s.id)
        .filter(Boolean)
        .filter(id => !filter || String(id).toLowerCase().includes(filter));

      if (!ids.length){
        setStatus("Pole ühtegi laulu (või filter on liiga kitsas).");
        return;
      }

      setStatus(`Genereerin ${ids.length} QR-kaarti…`);
      for (const id of ids){
        grid.appendChild(makeCard(id, size));
      }
      setStatus(`Valmis ✅ (${ids.length} tk)`);
    }

    regenBtn.addEventListener("click", render);

    let t=null;
    filterEl.addEventListener("input", () => {
      clearTimeout(t);
      t = setTimeout(render, 250);
    });

    render();
  </script>
</body>
</html>
